#include <iostream>
#include <vector>
#include <string>
using namespace std;

// ===================== PART 1: STOP =========================
class Stop {
public:
    int id;
    string name;
    string area;
    int students;

    Stop(int i, string n, string a, int s)
        : id(i), name(n), area(a), students(s) {}
};

// ===================== PART 2: STAFF ========================
class Driver {
public:
    string name;
    string shift;

    Driver(string n = "", string s = "") : name(n), shift(s) {}
};

class Conductor {
public:
    string name;

    Conductor(string n = "") : name(n) {}
};

// ===================== PART 3: BUS ==========================
class Bus {
public:
    string number;
    vector<int> stopIds;
    int capacity;
    int studentsCarried;

    Driver morningDriver;
    Driver eveningDriver;
    Conductor conductor;

    Bus(string num, vector<int> stops, int cap, int load,
        Driver md, Driver ed, Conductor c)
        : number(num),
          stopIds(stops),
          capacity(cap),
          studentsCarried(load),
          morningDriver(md),
          eveningDriver(ed),
          conductor(c) {}
};

// ===================== PART 4: TRANSPORT SYSTEM ==============
class UniversityTransport {
private:
    vector<Stop> stops;
    vector<Bus> buses;

public:
    void addStop(Stop s) {
        stops.push_back(s);
    }

    // ðŸ”¹ Minimal placeholder logic
    void createBusesAutomatically() {
        cout << "Creating buses automatically...\n";
        cout << "Logic handled in final implementation.\n\n";
    }

    void showAll() {
        cout << "University Transport System Summary\n";
        cout << "----------------------------------\n";
        cout << "Total Stops Added: " << stops.size() << "\n";

        for (auto &s : stops) {
            cout << "- " << s.name
                 << " (" << s.area << ") | Students: "
                 << s.students << "\n";
        }

        cout << "\nDetailed routing & scheduling\n";
        cout << "handled in final version.\n";
    }
};

// ===================== TEMP MAIN (LIMITED) ==================
int main() {

    UniversityTransport uni;

    uni.addStop(Stop(0, "Islamabad Stop", "Islamabad", 300));
    uni.addStop(Stop(1, "Rawalpindi Stop", "Rawalpindi", 450));
    uni.addStop(Stop(2, "Wah Cantt Stop", "Wah Cantt", 250));

    uni.createBusesAutomatically();
    uni.showAll();

Â Â Â Â returnÂ 0;
}